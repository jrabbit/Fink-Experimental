Depends: <<
	%N-shlibs (= %v-%r), 
	atk1-shlibs (>= 1.7.3-1), 
	gettext, 
	glib2, 
	libiconv, 
	libjpeg-shlibs, 
	libpng3-shlibs (>= 1.2.5-4), 
	libtiff-shlibs, 
	pango1-xft2 (>= 1.5.2-1), 
	x11
<<
BuildDepends: <<
	glib2-dev, 
	atk1-dev (>= 1.7.3-1), 
	pango1-xft2-dev (>= 1.5.2-1), 
	libpng3, 
	libjpeg, 
	libtiff, 
	pkgconfig (>= 0.15.0-2), 
	gettext-dev, 
	gettext-bin, 
	libiconv-dev
<<
PatchScript: sed -e 's|/opt|%p|g' <%a/%n.patch | patch -p1
SetLDFLAGS: -no-undefined
SetCPPFLAGS: -no-cpp-precomp -DX_LOCALE
SetLIBRARY_PATH: %p/lib
SetMACOSX_DEPLOYMENT_TARGET: 10.3
ConfigureParams: --mandir=%p/share/man
CompileScript: LD_TWOLEVEL_NAMESPACE=1 ./configure %c; ulimit -s unlimited && make
InstallScript: <<
  make install DESTDIR=%d
  install -d -m 755 %i/sbin %i/etc/gtk-2.0
  install -c -m 755 update-gdk-pixbuf-loaders %i/sbin/
  install -c -m 755 update-gtk-immodules %i/sbin/
<<
