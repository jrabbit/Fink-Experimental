  Package: %N-shlibs
  Depends: <<
  	atk1-shlibs (>= 1.7.3-1), 
  	gettext, 
  	glib2-shlibs, 
  	libiconv, 
  	libjpeg-shlibs, 
  	libpng3-shlibs (>= 1.2.5-4), 
  	libtiff-shlibs, 
  	pango1-xft2-shlibs (>= 1.5.0-1), 
  	x11-shlibs
  <<
  Files: <<
  	lib/lib*-2.0.*.dylib
  	lib/gtk-2.0/2.4.0
  <<
  Shlibs: <<
    %p/lib/libgdk-x11-2.0.0.dylib 201.0.0 %n (>= 2.4.9-1)
    %p/lib/libgdk_pixbuf-2.0.0.dylib 201.0.0 %n (>= 2.4.9-1)
    %p/lib/libgdk_pixbuf_xlib-2.0.0.dylib 201.0.0 %n (>= 2.4.9-1)
    %p/lib/libgtk-x11-2.0.0.dylib 201.0.0 %n (>= 2.4.9-1)
  <<
  DocFiles: AUTHORS COPYING ChangeLog NEWS README
  RunTimeVars: GDK_USE_XFT: 1
