Package: gcc3.1
Version: 3.1
Revision: 2
BuildDepends: gettext-dev, libiconv-dev
Conflicts: ccache-default (<= 2.4-10)
Replaces: ccache-default (<= 2.4-10)
Source: http://www.opensource.apple.com/darwinsource/tarballs/other/gcc3-1175.tar.gz
Source-MD5: 0f0abd6694aceeedc1abff21641580c4
ConfigureParams: --with-libiconv-prefix=%p --infodir='${prefix}/share/info' --libexecdir='${prefix}/lib' 
#--disable-shared
PatchScript: <<
 #!/bin/sh
 cd gcc
 mv Makefile.in Makefile.in.orig
 sed 's|$(ALL_CPPFLAGS) $(INCLUDES)|$(INCLUDES) $(ALL_CPPFLAGS)|g' < Makefile.in.orig > Makefile.in
<<
CompileScript: <<
 #!/bin/sh
 mkdir ../darwin 
 cd ../darwin
 ../gcc3-1175/configure %c
 make CC=gcc-3.3 CXX=g++-3.3 CFLAGS='-O' LIBCFLAGS='-g -O2' LIBCXXFLAGS='-g -O2 -fno-implicit-templates' bootstrap
#cd gcc; make check-g77
<<
InstallScript: <<
 #!/bin/sh
 cd ../darwin
 make install prefix=%i
 /bin/rm -rf %i/share/locale %i/man
 /bin/rm -f %i/lib/charset.alias
 /bin/rm -f %i/share/info/gcc* %i/share/info/cpp*
 /bin/mv -f %i/lib/libiberty.a %i/lib/libiberty-gcc3.3.a
<<

