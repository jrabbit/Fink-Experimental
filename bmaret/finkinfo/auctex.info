InstallScript: <<
  make
  make install prefix=%i
  rm -f %i/share/emacs/site-lisp/auctex/*.elc
  rm -f %i/share/emacs/site-lisp/auctex/style/*.elc
  rm -f %i/share/emacs/site-lisp/preview/*.elc
  rm -rf %i/info
  install -m 644 lpath.el %i/share/emacs/site-lisp/auctex
  mkdir -p %i/lib/emacsen-common/packages/install
  install -m 755 fink/install %i/lib/emacsen-common/packages/install/%n
  mkdir -p %i/lib/emacsen-common/packages/remove
  install -m 755 fink/remove %i/lib/emacsen-common/packages/remove/%n
  mkdir -p %i/sbin
  install -m 755 fink/update-auctex-elisp %i/sbin
  install -m 755 fink/update-auctex-install %i/sbin
  mkdir -p %i/share/man/man8
  install -m 644 fink/update-auctex-elisp.8 %i/share/man/man8
  install -m 644 fink/update-auctex-install.8 %i/share/man/man8	
  mkdir -p %i/share/info
  install -m 644 doc/auctex.info doc/preview-latex.info %i/share/info
  mkdir -p %i/var/lib/auctex
<<
PostInstScript: <<
  %p/lib/emacsen-common/emacs-package-install %n
  %p/bin/texhash
<<
PreRmScript: %p/lib/emacsen-common/emacs-package-remove %n
