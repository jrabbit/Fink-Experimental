Depends: ptex-base (>=3.1.3), ptex-jisfonts, okumura-clsfiles
Suggests: dvipdfmx, xdvik, morisawa-fontfiles
CustomMirror: <<
asi-JP: http://www.misojiro.t.u-tokyo.ac.jp/suribt/
Primary: http://www.keisu.t.u-tokyo.ac.jp/Research/
<<
Source: mirror:custom:suribt-%v.zip
Source-MD5: 05d57c21738acf91fa6eea947fafd15d
NoSourceDirectory: true
CompileScript: <<
  %p/bin/ptex --interaction=batchmode suribt.ins &> /dev/null
<<
InstallScript: <<
  install -m 755 -d                   %i/etc/texmf.local/ptex/platex/suribt
  install -m 644 suribt.{cls,dtx,ins} %i/etc/texmf.local/ptex/platex/suribt 
<<
DocFiles: suribt.pdf skelton-euc.tex
PostInstScript: <<
# If ls-R does not exist, we don't run mktexlsr(user may prefer not to).
if [ -x %p/bin/mktexlsr ] && [ -f %p/etc/texmf.local/ls-R ]
then
	%p/bin/mktexlsr %p/etc/texmf.local
fi
<<
