PatchScript: <<
  /bin/mv gpc231/gpc.{c,h} external/gpc
  /usr/bin/bzip2 -dc openoffice.org.113to121.patch.bz2 | /usr/bin/patch -p1 
  /usr/bin/sed "s|@FINK_PREFIX@|%p|g" < %a/%n.patch | /usr/bin/patch -p0
