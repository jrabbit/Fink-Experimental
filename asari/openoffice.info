PatchScript: <<
#!/bin/sh
/bin/cp  ../gpc231/gpc.* external/gpc
cat > Response <<EOF
		[ENVIRONMENT]
		INSTALLATIONMODE=INSTALL_NETWORK
		INSTALLATIONTYPE=STANDARD
		DESTINATIONPATH=%i/share/%n
		OUTERPATH=
		LOGFILE=
		LANGUAGELIST=

		[JAVA]
		JavaSupport=preinstalled_or_none
EOF
<<

ConfigureParams: --with-lang=ALL --with-dict=ALL --with-x --with-gnu-cp=%p/bin/cp
CompileScript: <<
#!/bin/tcsh
unsetenv LD_SEG_ADDR_TABLE
unsetenv LD_PREBIND
unsetenv LD_PREBIND_ALLOW_OVERLAP
(cd config_office; ./configure  %c)
./bootstrap
/bin/tcsh -c "source MacosxEnv.Set; dmake"
<<

InstallScript: <<
./setup -nogui -v -r:./Response
<<

