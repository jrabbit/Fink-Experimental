###
Source: mirror:custom:%n-%v.tar.bz2
SourceRename: %n-%v.tar.bz2
Source-MD5: 8aec1bb2dbcca1c92835c71e2e30d9c5
###
GCC: 3.1
###
ConfigureParams: --mandir=%p/share/man --infodir=%p/share/info --with-apxs2=%p/sbin/apxs --disable-debug
InstallScript: <<
  install -m 755 -d %d%p/etc/
  mv php.ini-recommended php.ini
  install -m 644 php.ini %d%p/etc/php.ini

  install -m 755 -d %d%p/etc/apache2/include/
  install -m 644 %p/etc/apache2/httpd.conf %d%p/etc/apache2
  
  make install INSTALL_ROOT=%d

  $(rm -f %d%p/etc/apache2/http* ; true)
  printf "LoadModule php4_module libphp4.so\nAddType application/x-httpd-php .php\nDirectoryIndex index.php\n" >> %d%p/etc/apache2/include/mod_php4.conf
<<
