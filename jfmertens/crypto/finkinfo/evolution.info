SetCPPFLAGS: -no-cpp-precomp
SetCFLAGS: -O3 -funroll-loops -fstrict-aliasing -flat_namespace -undefined suppress
NoSetMAKEFLAGS: true
SetMAKEFLAGS: -j1
Patch: %n.patch
PatchScript: <<
  perl -pi -e 's/hardcode_direct=yes/hardcode_direct=no/g' configure && perl -pi.bak -e "s/-scrollkeeper-update/#-scrollkeeper-update/g" help/*/Makefile.in
## The following are 'for safety' : to avoid "implicit declararation" warnings (some more remain to be checked..)
# Else implicit declararation of functions CAMEL_MULTIPART and CAMEL_IS_MULTIPART :
  perl -pi.bak -e 's,transport\.h>,$&\n\#include <camel/camel-multipart.h>,' mail/mail-ops.c
#perl -pi.bak -e 's,e\-dialog\-utils.h\",$&\n\#include "e-util/e-error.h",' shell/e-shell-window-commands.c
  perl -pi.bak -e 's,time.h>,$&\n\#include <string.h>,'  widgets/misc/e-send-options.h
  perl -pi.bak -e 's,mail/em-vfolder-rule.h,mail/mail-vfolder.h,' plugins/shared-folder/share-folder-common.c
# and to find Evolution.h in mail-vfolder.h when compiling share-folder-common.c :
  perl -pi.bak -e 's,Evolution.h,shell/Evolution.h,' mail/mail-vfolder.h
  perl -pi.bak -e 's,e-destination.h>,$&\n\#include "a11y/addressbook/ea-addressbook.h",' addressbook/gui/widgets/e-minicard.c
  perl -pi.bak -e 's,string.h>,$&\n\#include "a11y/addressbook/ea-addressbook.h",' addressbook/gui/widgets/e-minicard-view.c
### collect2 refuses to link with a module..
# The next change leaves 1 undefined symbol in liborg-gnome-calendar-weather.so, to be dynamically looked up,
# "_calendar_component_peek_source_list", and which should be obtained from libevolution-calendar.so.
# It is originally defined in ../../calendar/gui/.libs/calendar-component.o _ at worst we'll add a "-l" flag for that file.
## Same problem in plugins/itip-formatter ( liborg-gnome-itip-formatter.so );
# here there are a number of missing symbols, all coming from one of the following :
#  ../../calendar/gui/.libs/calendar-config.o ../../calendar/gui/.libs/itip-utils.o ../../mail/.libs/em-format-html.o ../../mail/.libs/em-utils.o
# ( libevolution-calendar.so libevolution-mail.so )
## Same problem in plugins/startup-wizard (liborg-gnome-evolution-startup-wizard.so);
#  here the missing symbols come from one of the following :
#  ../../calendar/gui/.libs/calendar-config.o ../../mail/.libs/em-account-editor.o
# ( libevolution-calendar.so libevolution-mail.so )
 sed -ri.bak -e '/LIBADD =/,+5{ /\/(calendar|mail)\//d }' plugins/{calendar-weather,itip-formatter,startup-wizard}/Makefile.in
