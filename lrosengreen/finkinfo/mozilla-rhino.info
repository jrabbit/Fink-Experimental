  ant jar
  ant javadoc
<<

# Install Phase
InstallScript: <<
  mkdir -p %i/share/mozilla-rhino
  cp build/js.jar %i/share/mozilla-rhino
  echo '#! /bin/sh' > rhino
  echo 'java -jar %p/share/mozilla-rhino/js.jar $@' >> rhino
  chmod +x rhino
  cp rhino %i/bin
 
  mkdir -p %i/share/doc/mozilla-rhino
  cp -R build/doc/apidocs %i/share/doc/mozilla-rhino
  rm -r build/doc/apidocs
  mv build/doc build/html
  cp -R build/html %i/share/doc
<<

