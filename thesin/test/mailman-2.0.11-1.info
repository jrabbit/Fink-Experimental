Package: mailman
Version: 2.0.11
Revision: 1
Depends: passwd, python | python-nox, cron-service
BuildDepends: 
Source: mirror:gnu:%n/%n-%v.tgz
ConfigureParams: --with-username=list --with-groupname=list --with-var-prefix=%p/var/%n --with-mail-gid=daemon --with-cgi-data=www-data --mandir=%i/share/man --infodir=%p/share/info --libexecdir=%p/lib
DocFiles: ACKNOWLEDGMENTS BUGS FAQ INSTALL NEWS README* TODO UPGRADING
InstallScript: <<
  make install prefix=%i

  mkdir -p %i/etc/cron.daily
  echo "#!/bin/sh" > %i/etc/crom.daily/mailman
  echo "" >> %i/etc/crom.daily/mailman
  echo "if [ ! -x %p/bin/python ]" >> %i/etc/crom.daily/mailman
  echo "then" >> %i/etc/crom.daily/mailman
  echo "  exit 0" >> %i/etc/crom.daily/mailman
  echo "fi" >> %i/etc/crom.daily/mailman
  echo "" >> %i/etc/crom.daily/mailman
  echo "cd %p/var/lib/mailman/cron 2> /dev/null" >> %i/etc/crom.daily/mailman
  echo "" >> %i/etc/crom.daily/mailman
  echo "# Mail reminders to admins as to pending requests." >> %i/etc/crom.daily/mailman
  echo "if [ -e %p/var/lib/mailman/cron/checkdbs ]" >> %i/etc/crom.daily/mailman
  echo "then" >> %i/etc/crom.daily/mailman
  echo "  su -s /bin/sh list -c \"%p/bin/python %p/var/lib/mailman/cron/checkdbs\"" >> %i/etc/crom.daily/mailman
  echo "fi" >> %i/etc/crom.daily/mailman
  echo "" >> %i/etc/crom.daily/mailman
  echo "# Mail digests for lists that do periodic as well as threshhold delivery." >> %i/etc/crom.daily/mailman
  echo "if [ -e %p/var/lib/mailman/cron/senddigests ]" >> %i/etc/crom.daily/mailman
  echo "then" >> %i/etc/crom.daily/mailman
  echo "  su -s /bin/sh list -c \"%p/bin/python %p/var/lib/mailman/cron/senddigests\"" >> %i/etc/crom.daily/mailman
  echo "fi" >> %i/etc/crom.daily/mailman

  mkdir -p %i/etc/cron.monthly
  echo "#!/bin/sh" > %i/etc/crom.monthy/mailman
  echo "" >> %i/etc/crom.monthly/mailman
  echo "if [ ! -x %p/bin/python ]" >> %i/etc/crom.monthly/mailman
  echo "then" >> %i/etc/crom.monthly/mailman
  echo "  exit 0" >> %i/etc/crom.monthly/mailman
  echo "fi" >> %i/etc/crom.monthly/mailman
  echo "" >> %i/etc/crom.monthly/mailman
  echo "cd %p/var/lib/mailman/cron 2> /dev/null" >> %i/etc/crom.monthly/mailman
  echo "" >> %i/etc/crom.monthly/mailman
  echo "# Send password reminders for all lists to all users." >> %i/etc/crom.monthly/mailman
  echo "if [ -e %p/var/lib/mailman/cron/mailpasswds ]" >> %i/etc/crom.monthly/mailman
  echo "then" >> %i/etc/crom.monthly/mailman
  echo "  su -s /bin/sh list -c \"%p/bin/python %p/var/lib/mailman/cron/mailpasswds\"" >> %i/etc/crom.monthly/mailman
  echo "fi" >> %i/etc/crom.monthly/mailman

  mkdir -p %i/etc/logrotate.d
  echo "" > %i/etc/logrotate.d/mailman
  echo "" >> %i/etc/logrotate.d/mailman
<<
