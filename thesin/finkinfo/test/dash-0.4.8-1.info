CompileScript: <<
#!/bin/sh
  rm -rf obj obj-udeb
  mkdir obj obj-udeb
  chmod u+x debian/bsdyacc

  pmake CFLAGS='-Wall -DBSD=1 -DSMALL -D_GNU_SOURCE -DGLOB_BROKEN -DHAVE_VASPRINTF=1 -DIFS_BROKEN -DGCC_BROKEN_NG -D__COPYRIGHT\(x\)= -D__RCSID\(x\)= -D_DIAGASSERT\(x\)= -g -O2 -fstrict-aliasing' YACC='$${.CURDIR}/debian/bsdyacc'
  MAKEOBJDIR=obj-udeb pmake CFLAGS:='$(CDEF) $(OPTSM)' \
        YACC:='$${.CURDIR}/debian/bsdyacc'

<<
