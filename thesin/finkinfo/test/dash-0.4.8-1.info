#!/bin/sh
  install obj/sh %i/bin/dash
  install -m 644 sh.1 %i/share/man/man1/dash.1
  ln -s %p/bin/dash %i/bin/sh
  ln -s %p/bin/dash %i/bin/ash
  ln -s %p/share/man/man1/dash.1 %i/share/man/man1/ash.1.gz
<<
