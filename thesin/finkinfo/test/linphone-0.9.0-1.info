PatchScript: <<
  sed -e s,"CPPFLAGS\=\"\$ORBIT_INCLUDEDIR \$CFLAGS\"","CPPFLAGS\=\"\$ORBIT_INCLUDEDIR \$CFLAGS -I%p/include\"", configure > configure.bak
  mv configure.bak configure
  chmod 755 configure
