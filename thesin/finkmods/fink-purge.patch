+### purge
+
+sub phase_purge {
+  my @packages = @_;
+
+  if (&execute("dpkg --purge @packages")) {
+    if (@packages == 1) {
+      die "can't purge package ".$packages[0]."\n";
+    } else {
+      die "can't batch-purge packages: @packages\n";
+    }
+  }
+  Fink::Status->invalidate();
+}
