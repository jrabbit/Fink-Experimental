PatchScript: <<
#!/bin/sh
patch -p0 < %a/%n.patch
#
perl -pi -e 's|(xml2-config.*)(\$\{prefix\})|$1 \$PATH $2|g' configure.in
make -f Makefile.cvs
#
# Fix the building of plugins
 perl -pi.bak -e 's|(^AM_LDFLAGS =).*\$\(linkflag\)(.*)|$1 $2 \$(LIB_QT)|g ;
                  s|\-Xlinker||g ; 
                  s|(lib.*)\.la|$1.so|g ; 
                  s|-version-info 0:0:0|-bundle -undefined dynamic_lookup -bind_at_load|g ;
                 ' `find . -name Makefile.in`
# make configure find the right version of freetype2
 perl -pi.bak -e 's,FREETYPE_CONFIG=\"\",FREETYPE_CONFIG=\"%p/lib/freetype219/bin/freetype-config\",g ;
                  s,LIBS=\"\-lfreetype,LIBS=\"\$LIBFREETYPE_LIBS,g ;
                  s,(^LIBTOOL=.*)\-\-silent,$1,g ;
                 ' configure
# point to Apple's Python framework
 perl -pi.bar -e "s,PYTHONLIB=.*,PYTHONLIB='-framework Python'\npython_libdir=yes\nLIBPYTHON=' ',g" configure
 perl -pi.bar -e "s,LIBPYTHON =.*,LIBPYTHON=,g" scribus/plugins/scriptplugin/Makefile.in 
# avoid indirect linking errors
 perl -pi.bar -e 's|libpdf_la_LIBADD =|libpdf_la_LIBADD =\$(LIBTIFF)|g' scribus/libpdf/Makefile.in
 perl -pi.baz -e 's|libscriptplugin_la_LIBADD =|libscriptplugin_la_LIBADD = \$\(LIBCUPS\)|g' scribus/plugins/scriptplugin/Makefile.in
# fix some declarations. 
 perl -pi.bak -e ' s|int makedir \(char \*newdir\)|int makedir \(const char \*newdir\)|g ;
                  s|int mymkdir\(char\* dirname\)|int mymkdir \(const char \*dirname\)|g ;
                 ' scribus/fileunzip.cpp
# remove reference to strndup() which doesn't exist in Darwin 
# replace it with strdup() which is all that is needed here anyway
 perl -pi.bak -e 's|strn(dup\(.*),.*|str$1\)\;|g' scribus/plugins/scriptplugin/scriptplugin.cpp
<<
CompileScript: <<
 #!/bin/sh
 export PATH=%p/lib/freetype219/bin:$PATH 
 export QTDIR=%p/lib/qt3mac
 export PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig/"
# export FONTCONFIG_CONFIG=""
# export LIBFONTCONFIG_CFLAGS="-I%p/lib/fontconfig2/include" 
# export LIBFONTCONFIG_LIBS="%p/lib/fontconfig2/lib/libfontconfig.a -L%p/lib -lexpat"
./configure --prefix=%p/lib/%n --enable-mac \
        --with-qt-dir=$QTDIR --with-qt-includes=$QTDIR/include --with-qt-libraries=$QTDIR/lib \
        --with-extra-includes=%p/include --with-extra-libs=%p/lib \
        --with-pythondir=/System/Library/Frameworks/Python.framework/Versions/2.3/ \
        --disable-dependency-tracking
# remove linking to X11
 perl -pi.bar -e 's|(scribus_LDADD =.*)\-lXext \-lX11|$1|g;
                  s|(LIBFONTCONFIG_LIBS =).*|$1 %p/lib/fontconfig2/lib/libfontconfig.a -L%p/lib -lexpat|g;
                  s|(AM_LDFLAGS =).*|$1 \$\(LIBFREETYPE_LIBS\) -L/sw/lib/qt3mac/lib \$\(LIB_QT\)|g;
                 ' scribus/Makefile
 make
<< 
