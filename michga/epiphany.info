ConfigureParams: --mandir=%p/share/man --disable-dependency-tracking
PatchScript: perl -pi.bak -e "s/-scrollkeeper-update/#-scrollkeeper-update/g" help/*/Makefile.in
SetCPPFLAGS: -no-cpp-precomp
SetCFLAGS: -O3 -funroll-loops -fstrict-aliasing
CompileScript: <<
#!/bin/sh
 ./configure %c
 perl -pi.bak -e "s|-L%p\/lib\/mozilla\/freetype2\/lib|-L%p\/lib\/freetype2\/lib|g; s|-I\/usr\/X11R6\/include\/freetype2|-I%p\/lib\/freetype2|g" config.status
 make
<<
InstallScript: GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 make install DESTDIR=%d
PostInstScript: <<
  if [ configure = "$1" ]; then
    scrollkeeper-update
    export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source`
    gconftool-2 --makefile-install-rule %p/etc/gconf/schemas/epiphany.schemas >/dev/null
   fi
<<
PostRmScript: <<
  if [ update != "$1" ]; then
    scrollkeeper-update
  fi
<<
ConfFiles: %p/etc/gconf/schemas/epiphany.schemas
Splitoff: <<
 Package: %N-dev
 Depends: pkgconfig
 BuildDependsOnly: True
 Files: include lib/pkgconfig/epiphany-1.4.pc
<<
