ConfigureParams: --disable-mysql --disable-postgresql --without-nmm --without-mas --without-helix --without-libvisual --with-distribution='Fink/Mac OS X' --with-libgpod --with-mp4v2 --with-mp4v2-dir=%p
CompileScript: <<
#!/bin/sh -e

	export HOME=/tmp
	export PREFIX="%p" UNSERMAKE=1
	. ./environment-helper.sh
	export lt_cv_sys_max_cmd_len=65536

	export CC=gcc-3.3 CXX=g++-3.3

	if [ "%type_raw[amarok]" = "-gstreamer-xine" ]; then
		# enable both
		CONFIGURE_PARAMS="$CONFIGURE_PARAMS --with-gstreamer10 --with-xine"
	elif [ "%type_raw[amarok]" = "-gstreamer" ]; then
		# just gstreamer, no xine
		CONFIGURE_PARAMS="$CONFIGURE_PARAMS --without-xine --with-gstreamer10"
	elif [ "%type_raw[amarok]" = "-xine" ]; then
		# just xine, no gstreamer
		:
	else
		# whoa, this shouldn't happen
		exit 1
	fi

	./build-helper.sh cvs       %{Ni} %v %r make -f admin/Makefile.common cvs
	./build-helper.sh configure %{Ni} %v %r ./configure %c $CONFIGURE_PARAMS
	./build-helper.sh make      %{Ni} %v %r unsermake
<<

InstallScript: <<
#!/bin/sh -e

	export PREFIX="%p" UNSERMAKE=1
	. ./environment-helper.sh

	./build-helper.sh install %{Ni} %v %r unsermake install DESTDIR=%d

	install -d -m 755 %i/share/config
	cat <<END >%i/share/config/amarokrc
[Gst-Engine]
Sound Output=esdsink
END
<<
