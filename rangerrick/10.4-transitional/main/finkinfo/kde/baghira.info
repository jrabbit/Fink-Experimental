CompileScript: <<
#!/bin/sh -e

	export PREFIX="%p" UNSERMAKE=1 lt_cv_sys_max_cmd_len=65536
	. ./environment-helper.sh

	./build-helper.sh cvs       %N %v %r make -f admin/Makefile.common cvs
	./build-helper.sh configure %N %v %r ./configure %c
	./build-helper.sh make      %N %v %r unsermake
<<

InstallScript: <<
#!/bin/sh -e

	export PREFIX="%p" UNSERMAKE=1
	. ./environment-helper.sh

	./build-helper.sh install %N %v %r unsermake -j1 install DESTDIR=%d

	mkdir -p %i/share/doc/installed-packages
	touch %i/share/doc/installed-packages/%N
<<
