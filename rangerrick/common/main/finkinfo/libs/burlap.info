Source: http://www.caucho.com/%n/download/%n-%v-src.jar
Source-MD5: 389e112a1356bc1001a59cc810a04a42
NoSourceDirectory: true
BuildDepends: system-java14-dev
Depends: system-java14 | system-java15
CompileScript: <<
#!/bin/sh -ex

 jar -xvf %p/src/%n-%v-src.jar
 $JAVA_HOME/bin/javac `find com -name \*.java`
 mkdir -p api
 $JAVA_HOME/bin/javadoc -sourcepath . -d api `find com -name \*.java`
<<
InstallScript: <<
#!/bin/sh -xe

 mkdir -p %i/share/java/%n
 jar -cvf burlap-2.1.12.jar `find com -name \*.class`
 mkdir -p %i/share/doc/%n
 cp -R api %i/share/doc/%n/
 find %i/share/doc/%n -type d -exec chmod 755 {} \;
 find %i/share/doc/%n -type f -exec chmod 644 {} \;
<<
