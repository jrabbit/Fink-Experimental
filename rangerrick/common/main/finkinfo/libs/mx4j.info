Package: mx4j
Version: 2.1.1
Revision: 1
Type: java(1.4)
Source: mirror:sourceforge:%n/%n-%v-src.tar.gz
Source-MD5: 59ae019c5e2cf6825dc35b2886ca1bdc
SourceDirectory: %n-%v
Patch: %n.patch
BuildDepends: ant (>= 1.6.1-2), ant-junit (>= 1.6.1-2), axis, bcel, fink (>= 0.22.2-1), javamail, junit, jython, system-java14-dev, xmlunit
Depends: axis, bcel, javamail, jython, system-java14 | system-java15
CompileScript: <<
#!/bin/sh -ex

  find . -name jetty -exec rm -rf {} \; || :
  pushd build
  ant release
<<
JarFiles: dist/lib/*.jar
InstallScript: <<
#!/bin/sh -ex

  install -d -m 755 %i/share/doc/%n
  mv dist/docs/api/* %i/share/doc/%n/
  mv dist/examples %i/share/doc/%n/

  find %i/share/doc/%n -type d -exec chmod 755 {} \;
  find %i/share/doc/%n -type f -exec chmod 644 {} \;
<<
