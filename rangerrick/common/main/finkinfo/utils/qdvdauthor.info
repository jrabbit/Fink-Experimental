Package: qdvdauthor
Version: 0.0.4
Revision: 1
###
Depends: qt3-shlibs, dvdauthor
BuildDepends: qt3, imagemagick | imagemagick-nox
###
Source: mirror:sourceforge:%n/%n-%v.tar.gz
Source-MD5: de0467f7e7baddb6fe654fa469dd650f
###
CompileScript: <<
#!/bin/sh -e

	export IMAGE_LIB=imagemagicklib
	perl -pi.bak -e 's,/usr,%p,g' qdvdauthor.desktop
	pushd qdvdauthor
	qmake qdvdauthor.pro
	perl -pi.bak -e 's,INCPATH.*=,INCPATH = -I%p/include,g' Makefile
	make
	pushd qslideshow
	qmake qslideshow.pro
	perl -pi.bak -e 's,INCPATH.*=,INCPATH = -I%p/include,g' Makefile
	make
<<
InstallScript: <<
#!/bin/sh -e

	install -d -m 755 %i/bin
	install -c -m 755 qdvdauthor/qdvdauthor %i/bin/
	install -c -m 755 qdvdauthor/qslideshow/qslideshow %i/bin/

	install -d -m 755 %i/share/pixmaps
	install -c -m 644 qdvdauthor.png %i/share/pixmaps/

	install -d -m 755 %i/share/applications
	install -c -m 644 qdvdauthor.desktop %i/share/applications/
<<
