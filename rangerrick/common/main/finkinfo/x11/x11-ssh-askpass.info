PatchScript: sed -e 's,@PREFIX@,%p,g' %a/%n.patch | patch -p1
BuildDepends: x11-dev
Depends: x11-shlibs, app-defaults
CompileScript: <<
  ln -s SshAskpass-default.ad SshAskpass.ad
  make
<<
InstallScript: <<
 make install DESTDIR=%d
 install -d -m 755 %i/libexec
 mv %d/usr/local/libexec/x11-ssh-askpass %i/libexec/
 install -d -m 755 %i/etc/app-defaults
 mv %d/usr/X11R6/lib/X11/app-defaults/* %i/etc/app-defaults/
 rm -rf %d/usr
 install -d -m 755 %i/etc/profile.d
 install -c -m 755 %n.csh %n.sh %i/etc/profile.d/
<<
