Package: cocoa-sharp
Version: 0.2
Revision: 1
Source: http://www.go-mono.com/archive/1.1.4/%n-%v.tgz
Source-MD5: dfbbf5871a38ecb3bd50799831b16f05
SourceDirectory: %N
BuildDepends: glib2 (>= 2.0.4-1), glib2-dev (>= 2.0.4-1), mono-dev (>= 1.1.4-1), libicu31-dev, pkgconfig
Depends: glib2-shlibs (>= 2.0.4-1), mono (>= 1.1.4-1)
NoSetLDFLAGS: true
ConfigureParams: --mandir=%p/share/man --infodir=%p/share/info --disable-static --disable-dependency-tracking
CompileScript: <<
#!/bin/sh -ex

  export lt_cv_sys_max_cmd_len=65536
  ./configure %c
  make
<<
InstallScript: <<
#!/bin/sh -ex
  make install DESTDIR=%d
  install -d -m 755 %i/share/%n/sample
  cp -R sample/* %i/share/%n/sample/
<<
PostInstScript: <<
  [ -x "%p/bin/monodoc" ] && [ -d "%p/lib/monodoc" ] && "%p/bin/monodoc" --make-index >/dev/null 2>&1 || :
<<

