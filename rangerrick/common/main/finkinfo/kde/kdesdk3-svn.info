PatchScript: <<
	perl -pi.bak -e 's,-O2,-Os,g; s,doc/HTML,doc/kde,g; s,/usr/share/doc/packages/qt3/html,%p/share/doc/qt3/html,g;' admin/*
<<

NoSetCPPFLAGS: true
NoSetLDFLAGS: true
ConfigureParams: --includedir=%p/include --libdir=%p/lib --prefix=%p --with-qt-dir=%p --with-qt-includes=%p/include/qt --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=no --mandir=%p/share/man --with-xinerama --with-pam --disable-final --with-db-name=db-4.2 --with-distribution='Fink/Mac OS X' --disable-dependency-tracking --enable-gcc-hidden-visibility

CompileScript: <<
#!/bin/sh -e

	export HOME=/tmp
	export PREFIX="%p"
	export LEX="%p/lib/flex/bin/flex"
	. ./environment-helper.sh
	export lt_cv_sys_max_cmd_len=65536

	export CC=gcc-3.3 CXX=g++-3.3

	./build-helper.sh cvs       %N %v %r make -f admin/Makefile.common cvs
	./build-helper.sh configure %N %v %r ./configure %c
	pushd kioslave
	../build-helper.sh make     %N %v %r make all LIB_DBIV=-ldb-4.2 all_libraries="$ALL_LIBRARIES"
<<

InstallScript: <<
#!/bin/sh -e

	export PREFIX="%p"
	. ./environment-helper.sh

	pushd kioslave
	../build-helper.sh install %N %v %r make -j1 install DESTDIR=%d
	popd
<<

