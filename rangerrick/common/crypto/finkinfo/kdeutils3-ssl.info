CompileScript: <<
#!/bin/sh -e

  export HOME=/tmp
  export PREFIX="%p"
  . ./environment-helper.sh
  export lt_cv_sys_max_cmd_len=65536

  ./build-helper.sh cvs       %N %v %r make -f admin/Makefile.common cvs
  ./build-helper.sh configure %N %v %r ./configure %c

  pushd kgpg
  ../build-helper.sh make     %N %v %r make all all_libraries="$ALL_LIBRARIES" LIBSNMP="-lnetsnmp -lcrypto"
  popd
  pushd ksim
  ../build-helper.sh make     %N %v %r make all all_libraries="$ALL_LIBRARIES" LIBSNMP="-lnetsnmp -lcrypto"
  popd

  pushd doc/kgpg
  ../../build-helper.sh make  %N %v %r make all all_libraries="$ALL_LIBRARIES" LIBSNMP="-lnetsnmp -lcrypto"
  popd
  pushd doc/ksim
  ../../build-helper.sh make  %N %v %r make all all_libraries="$ALL_LIBRARIES" LIBSNMP="-lnetsnmp -lcrypto"
  popd

<<

InstallScript: <<
#!/bin/sh -e

  export PREFIX="%p"
  . ./environment-helper.sh

  pushd kgpg
  ../build-helper.sh install %N %v %r make -j1 install DESTDIR=%d
  popd
  pushd ksim
  ../build-helper.sh install %N %v %r make -j1 install DESTDIR=%d
  popd

  pushd doc/kgpg
  ../../build-helper.sh install %N %v %r make -j1 install DESTDIR=%d
  popd
  pushd doc/ksim
  ../../build-helper.sh install %N %v %r make -j1 install DESTDIR=%d
  popd

  rm -rf %i/include
  rm -rf %i/lib/libksimcore.la
  rm -rf %i/lib/libksimcore.dylib

  mkdir -p %i/share/doc/installed-packages
  touch %i/share/doc/installed-packages/%N
<<

