ConfigureParams: --includedir=%p/include --libdir=%p/lib --prefix=%p --with-qt-dir=%p --with-qt-includes=%p/include/qt --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=no --mandir=%p/share/man --with-xinerama --with-pam --disable-final --with-db-name=db-4.2 --with-distribution='Fink/Mac OS X' --disable-dependency-tracking

CompileScript: <<
#!/bin/sh -e

  export HOME=/tmp
  export PREFIX="%p"
  export LEX="%p/lib/flex/bin/flex"
  . ./environment-helper.sh
  export lt_cv_sys_max_cmd_len=65536

  ./build-helper.sh cvs       %N %v %r make -f admin/Makefile.common cvs
  ./build-helper.sh configure %N %v %r ./configure %c

  perl -pi -e 's,(..libdir.)/kde3,$1,g' kompare/libdialogpages/Makefile
  find . -name \*.l -exec touch {} \;
  find . -name \*.ll -exec touch {} \;

  pushd kbugbuster
  ../build-helper.sh make     %N %v %r make all LIB_DBIV=-ldb-4.2 all_libraries="$ALL_LIBRARIES"
  popd
<<

InstallScript: <<
#!/bin/sh -e

  export PREFIX="%p"
  . ./environment-helper.sh

  pushd kbugbuster/kresources
  ../../build-helper.sh install %N %v %r make -j1 install DESTDIR=%d

  mkdir -p %i/share/doc/installed-packages
  touch %i/share/doc/installed-packages/%N
<<

