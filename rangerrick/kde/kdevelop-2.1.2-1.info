SetLDFLAGS: -L%p/lib
SetCPPFLAGS: -no-cpp-precomp
SetCFLAGS: -fno-common
ConfigureParams: --prefix=%p --with-qt-dir=%p --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=yes --mandir=%i/share/man --with-xinerama --enable-final $KDEOPTS
CompileScript: <<
 make -f Makefile.cvs
 (export KDEDIR=%p; sh configure %c; make)
<<
InstallScript: <<
 make install DESTDIR=%d
<<
