Package: quartz-wm
Version: 1.0
Revision: 1
Depends: xfree86 (>= 4.4.0-1)
Type: nosource
CompileScript: echo "not needed"
InstallScript: <<
#!/bin/sh

	FOUND=0
	find /Volumes/X* /Volumes/Mac* / -name X11User.pkg 2>/dev/null | while read PACKAGE; do
		install -d -m 755 %d
		pushd "%d"
		gzip -dc "$PACKAGE/Contents/Archive.pax.gz" | pax -r '*quartz-wm*'
		popd
		FOUND=1
		break
	done

	if [ "$FOUND" = "0" ]; then
		cat <<END
I was unable to find X11User.pkg on your hard drive.  Please download the
X11 User dmg (and open/mount it) from http://www.apple.com/macosx/x11/ or
insert disc 3 of your Panther installation CDs and try again.
END
		exit 1
	fi
<<
