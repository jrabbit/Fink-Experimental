Source2ExtractDir: %n-%v

PatchScript: sed 's|@PREFIX@|%p|g' <%a/%f.patch | patch -p0

SetCFLAGS: -fno-common
SetCPPFLAGS: -no-cpp-precomp -isystem %p/include -I%p/include
SetLIBS: -L%p/lib
NoSetLDFLAGS: true
SetMACOSX_DEPLOYMENT_TARGET: 10.2
ConfigureParams: --includedir=%p/include --libdir=%p/lib --prefix=%p --with-qt-dir=%p --with-qt-includes=%p/include/qt --with-extra-libs=%p/lib --with-extra-includes=%p/include --enable-mt --with-pic --enable-rpath --enable-shared=yes --enable-static=no --mandir=%i/share/man --with-xinerama --with-pam --disable-final --with-pythondir=%p --with-qtdoc-dir=%p/share/doc/qt3/html --with-kdelibsdoxy-dir=%p/share/doc/kde/en/kdelibs-3.1-apidocs --with-kdelibsdoc-dir=%p/share/doc/kde/en/kdelibs-3.1-apidocs --enable-scripting --enable-javasupport --enable-debug
CompileScript: <<
#!/bin/sh
  export KDEDIR=%p
  mkdir -p /tmp/kde-build

  date > /tmp/kde-build/%N-%v-%r.cvs
  make -f admin/Makefile.common cvs 2>&1 | tee -a /tmp/kde-build/%N-%v-%r.cvs
  [ $? -gt 0 ] && exit 1

  date > /tmp/kde-build/%N-%v-%r.configure
  sh ./configure %c 2>&1 | tee -a /tmp/kde-build/%N-%v-%r.configure
  [ $? -gt 0 ] && exit 1

  date > /tmp/kde-build/%N-%v-%r.make
  make -j2 all 2>&1 | tee -a /tmp/kde-build/%N-%v-%r.make
<<

InstallScript: <<
#!/bin/sh
  mkdir -p /tmp/kde-build

  date > /tmp/kde-build/%N-%v-%r.install
  make install DESTDIR=%d 2>&1 | tee -a /tmp/kde-build/%N-%v-%r.install
<<
