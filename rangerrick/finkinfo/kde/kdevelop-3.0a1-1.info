#!/bin/sh
 make -f Makefile.cvs
 export KDEDIR=%p
 echo running ./configure %c
 sh ./configure %c
 make -j4
<<
InstallScript: <<
 make install DESTDIR=%d
 rm -rf %i/bin/extractrc
