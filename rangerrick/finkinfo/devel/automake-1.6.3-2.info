Package: automake
Version: 1.6.3
Revision: 2
Maintainer: Max Horn <max@quendi.de>
Depends: autoconf25 (>= 2.52-1)
Source: gnu
Source-MD5: 2bd506db63b6d10458cb644b6171ce93
ConfigureParams: --infodir=%p/share/info
InstallScript: <<
  make install DESTDIR=%d
  rm -rf %i/bin/automake
  rm -rf %i/bin/aclocal
  mv %i/share/info/automake.info   %i/share/info/automake-1.6.info
  mv %i/share/info/automake.info-1 %i/share/info/automake-1.6.info-1
  mv %i/share/info/automake.info-2 %i/share/info/automake-1.6.info-2
  mv %i/share/info/automake.info-3 %i/share/info/automake-1.6.info-3
  mv %i/share/info/automake.info-4 %i/share/info/automake-1.6.info-4
<<
PostInstScript: <<
  update-alternatives --install %p/bin/automake               automake        %p/bin/automake-1.6               16
  update-alternatives --install %p/bin/aclocal                aclocal         %p/bin/aclocal-1.6                16
  update-alternatives --install %p/share/info/automake.info   automake.info   %p/share/info/automake-1.6.info   16
  update-alternatives --install %p/share/info/automake.info-1 automake.info-1 %p/share/info/automake-1.6.info-1 16
  update-alternatives --install %p/share/info/automake.info-2 automake.info-2 %p/share/info/automake-1.6.info-2 16
  update-alternatives --install %p/share/info/automake.info-3 automake.info-3 %p/share/info/automake-1.6.info-3 16
  update-alternatives --install %p/share/info/automake.info-4 automake.info-4 %p/share/info/automake-1.6.info-4 16
<<
PreRmScript: <<
  if [ "$1" != "upgrade" ]; then
    update-alternatives --remove automake        %p/bin/automake-1.6
    update-alternatives --remove aclocal         %p/bin/aclocal-1.6
    update-alternatives --remove automake.info   %p/share/info/automake-1.6.info
    update-alternatives --remove automake.info-1 %p/share/info/automake-1.6.info-1
    update-alternatives --remove automake.info-2 %p/share/info/automake-1.6.info-2
    update-alternatives --remove automake.info-3 %p/share/info/automake-1.6.info-3
    update-alternatives --remove automake.info-4 %p/share/info/automake-1.6.info-4
  fi
<<
