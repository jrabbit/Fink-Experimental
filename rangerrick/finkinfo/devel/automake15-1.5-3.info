Package: automake15
Version: 1.5
Revision: 3
Maintainer: Max Horn <max@quendi.de>
Source: mirror:gnu:automake/automake-%v.tar.gz
Patch: %f.patch
ConfigureParams: --infodir=%p/share/info --program-suffix="-1.5"
InstallScript: <<
  make install DESTDIR=%d
  rm -rf %i/bin/automake
  rm -rf %i/bin/aclocal
  mv %i/share/info/automake.info   %i/share/info/automake-1.5.info  
  mv %i/share/info/automake.info-1 %i/share/info/automake-1.5.info-1
  mv %i/share/info/automake.info-2 %i/share/info/automake-1.5.info-2
  mv %i/share/info/automake.info-3 %i/share/info/automake-1.5.info-3
  mv %i/share/info/automake.info-4 %i/share/info/automake-1.5.info-4
<<
PostInstScript: <<
  update-alternatives --install %p/bin/automake               automake        %p/bin/automake-1.5               15
  update-alternatives --install %p/bin/aclocal                aclocal         %p/bin/aclocal-1.5                15
  update-alternatives --install %p/share/info/automake.info   automake.info   %p/share/info/automake-1.5.info   15
  update-alternatives --install %p/share/info/automake.info-1 automake.info-1 %p/share/info/automake-1.5.info-1 15
  update-alternatives --install %p/share/info/automake.info-2 automake.info-2 %p/share/info/automake-1.5.info-2 15
  update-alternatives --install %p/share/info/automake.info-3 automake.info-3 %p/share/info/automake-1.5.info-3 15
  update-alternatives --install %p/share/info/automake.info-4 automake.info-4 %p/share/info/automake-1.5.info-4 15
<<
PreRmScript: <<
  if [ "$1" != "upgrade" ]; then
    update-alternatives --remove automake        %p/bin/automake-1.5
    update-alternatives --remove aclocal         %p/bin/aclocal-1.5
    update-alternatives --remove automake.info   %p/share/info/automake-1.5.info
    update-alternatives --remove automake.info-1 %p/share/info/automake-1.5.info-1
    update-alternatives --remove automake.info-2 %p/share/info/automake-1.5.info-2
    update-alternatives --remove automake.info-3 %p/share/info/automake-1.5.info-3
    update-alternatives --remove automake.info-4 %p/share/info/automake-1.5.info-4
  fi
<<
