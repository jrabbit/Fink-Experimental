Package: automake17
Version: 1.7.1
Revision: 1
Maintainer: Max Horn <max@quendi.de>
Depends: autoconf25 (>= 2.52-1)
Replaces: automake
Source: mirror:gnu:automake/automake-%v.tar.gz
Source-MD5: e6fae71b4a1fe5af6f10ed9f1e9ca12e
ConfigureParams: --infodir=%p/share/info
InstallScript: <<
  make install DESTDIR=%d
  rm -rf %i/bin/automake
  rm -rf %i/bin/aclocal
  mv %i/share/info/automake.info   %i/share/info/automake-1.7.info  
  mv %i/share/info/automake.info-1 %i/share/info/automake-1.7.info-1
  mv %i/share/info/automake.info-2 %i/share/info/automake-1.7.info-2
  mv %i/share/info/automake.info-3 %i/share/info/automake-1.7.info-3
  mv %i/share/info/automake.info-4 %i/share/info/automake-1.7.info-4
<<
PostInstScript: <<
  update-alternatives --install %p/bin/automake               automake        %p/bin/automake-1.7               17
  update-alternatives --install %p/bin/aclocal                aclocal         %p/bin/aclocal-1.7                17
  update-alternatives --install %p/share/info/automake.info   automake.info   %p/share/info/automake-1.7.info   17
  update-alternatives --install %p/share/info/automake.info-1 automake.info-1 %p/share/info/automake-1.7.info-1 17
  update-alternatives --install %p/share/info/automake.info-2 automake.info-2 %p/share/info/automake-1.7.info-2 17
  update-alternatives --install %p/share/info/automake.info-3 automake.info-3 %p/share/info/automake-1.7.info-3 17
  update-alternatives --install %p/share/info/automake.info-4 automake.info-4 %p/share/info/automake-1.7.info-4 17
<<
PreRmScript: <<
  if [ "$1" != "upgrade" ]; then
    update-alternatives --remove automake        %p/bin/automake-1.7
    update-alternatives --remove aclocal         %p/bin/aclocal-1.7
    update-alternatives --remove automake.info   %p/share/info/automake-1.7.info
    update-alternatives --remove automake.info-1 %p/share/info/automake-1.7.info-1
    update-alternatives --remove automake.info-2 %p/share/info/automake-1.7.info-2
    update-alternatives --remove automake.info-3 %p/share/info/automake-1.7.info-3
    update-alternatives --remove automake.info-4 %p/share/info/automake-1.7.info-4
  fi
<<
