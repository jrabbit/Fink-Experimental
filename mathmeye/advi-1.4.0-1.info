Package: advi
Version: 1.4.0
Revision: 1
Source: %n-%v.tar.gz
Source-MD5: f605d653ff7785ff48c39851e990380f
Description: DVI previewer and presenter
License: LGPL
Depends: camlimages, tetex-texmf, tcltk-shlibs
BuildDepends: tcltk-dev
CompileScript: <<
  ./configure %c
  make WITH_X="-L/usr/X11R6/lib -lSM -lICE -lX11 -L%p/lib"
<<
InstallScript: <<
  #!/bin/sh
  export ADVI_LOC=%i/share/texmf/tex/latex/advi
  mkdir -p %i/bin
  cp advi.opt %i/bin/advi
  if test ! -d $ADVI_LOC; then mkdir -p $ADVI_LOC; fi
  cp doc/splash.dvi tex/advilogo.eps tex/caml.eps tex/bar.jpg.eps tex/*.sty tex/advi.pro $ADVI_LOC
  if [ -f conf/jpfonts.conf ]; then cp conf/jpfonts.conf $ADVI_LOC; fi

  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmr12
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmbx12
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmtt12
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmmi12
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmex10
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmsy6
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmr6
  mktexpk --mfmode / --bdpi 600 --mag 1+0/600 --dpi 600 --destdir %i/share/texmf/fonts/pk/ljfour/public/cm/ cmsy10
<<
PostInstScript: <<
  export ADVI_LOC=%i/share/texmf/tex/latex/advi
  texhash
  if test "x`kpsewhich advi.sty`" = "x"; then \
    echo '*** NOTE BEFORE USE ***' ;\
    echo Please add $ADVI_LOC; \
    echo to your TEXINPUTS environment variable\!; \
    echo '***********************' ;\
  fi
<<
PostRmScript: <<
  if [ $1 != "upgrade" ]; then
    texhash
  fi
<<
