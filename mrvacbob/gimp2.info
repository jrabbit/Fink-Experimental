Depends: gimp-print-shlibs, libpng3-shlibs, libjpeg-shlibs, libtiff-shlibs, glib2-shlibs, gtk+2-shlibs, netpbm-shlibs, giflib-shlibs, imlib-shlibs, aalib-shlibs, gettext, libiconv, libexif-shlibs, libart2-shlibs, libmng2-shlibs
BuildDepends: libpng3, libjpeg, libtiff, glib2, netpbm, giflib, imlib, aalib (>= 1.4rc5-2), gettext-dev, gettext-bin, libiconv-dev, gtk-doc, x11-dev, gimp-print-dev, pkgconfig, libexif-dev, gtk+2-dev, libart2, libmng2
