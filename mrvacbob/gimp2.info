SetCC: gcc -I%p/lib/fontconfig2/include/ 
SetLIBS: -liconv -lintl -Wl,-search_paths_first
ConfigureParams: --disable-dependency-tracking --enable-altivec --enable-mp --enable-print --enable-gtk-doc --with-shm=posix --with-aa --with-sendmail=/usr/sbin/sendmail
CompileScript: <<
#!/bin/sh
export PKG_CONFIG_PATH="%p/lib/fontconfig2/lib/pkgconfig/:%p/lib/xft2/lib/pkgconfig/"
./configure %c
make
<<
InstallScript: <<
 make install DESTDIR=%d
<<

