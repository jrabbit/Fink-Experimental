 mv %i/lib/pkgconfig %i/lib/freetype2/lib
 mv %i/include %i/lib/freetype2
 rm -rf %i/share/aclocal
 mkdir -p %i/share/doc/%n
 cp -r docs %i/share/doc/%n
<<
