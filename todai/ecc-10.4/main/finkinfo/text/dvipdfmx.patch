+#!/bin/sh
+
+trap 'test -z "$tmpf" || rm -f "$tmpf"' 0
+test -z "$1" && { echo "Usage: out2uni filename" 1>&2; exit 1; }
+tmpf=`mktemp /tmp/out2uni.XXXXXX` || { echo "$0: mktemp failed" 1>&2; exit 1; }
+
+if NKF="`which nkf 2>/dev/null`"
+then
+	$NKF -e ${1}.out > ${tmpf}
+	/bin/cp ${tmpf} ${1}.out
+fi
+
+${0}.bin ${1}
